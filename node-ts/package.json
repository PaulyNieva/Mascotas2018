{
  "name": "mascotas-node-typescript",
  "version": "0.1.0",
  "description": "Server de Masctoas en Node con TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/nmarsollier/pa2018_mascotas.git"
  },
  "author": "Nestor Marsollier",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"nodemon dist/server.js\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "body-parser": "1.17.2",
    "compression": "1.7.0",
    "connect-mongo": "1.3.2",
    "dotenv": "4.0.0",
    "express": "4.15.3",
    "express-validator": "3.2.1",
    "lodash": "4.17.4",
    "mongoose": "4.11.1",
    "morgan": "1.8.2",
    "passport": "0.3.2",
    "winston": "2.3.1",
    "passport-jwt": "2.2.1",
    "jsonwebtoken": "7.4.1",
    "helmet": "3.6.1",
    "chalk": "2.0.1",
    "cors": "2.8.3"
  },
  "devDependencies": {
    "@types/body-parser": "1.16.4",
    "@types/connect-mongo": "0.0.33",
    "@types/dotenv": "4.0.0",
    "@types/express": "4.0.36",
    "@types/jest": "20.0.2",
    "@types/lodash": "4.14.68",
    "@types/mongodb": "2.2.7",
    "@types/mongoose": "4.7.18",
    "@types/morgan": "1.7.32",
    "@types/node": "8.1.0",
    "@types/passport": "0.3.3",
    "@types/passport-jwt": "2.0.21",
    "@types/helmet": "0.0.35",
    "@types/chalk": "0.4.31",
    "@types/cors": "2.8.1",
    "@types/compression": "0.0.33",
    "@types/jsonwebtoken": "7.2.2",
    "@types/winston": "2.3.3",
    "concurrently": "3.5.0",
    "jest": "20.0.4",
    "shelljs": "0.7.8",
    "tslint": "5.5.0",
    "nodemon": "1.11.0",
    "typescript": "2.4.1",
    "depcheck": "0.6.7"
  }
}